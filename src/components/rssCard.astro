---
const { title, link, pubDate, contentSnippet } = Astro.props;
---
<div class="card border rounded-lg p-4 shadow-lg">
  <h2 class="text-xl font-bold mb-2"><a href={link} target="_blank" rel="noopener noreferrer">{title}</a></h2>
  <p class="text-sm text-gray-500 mb-2">{new Date(pubDate).toLocaleDateString()}</p>
  <p class="text-base">{contentSnippet}</p>
</div>

<style>
.card {
  transition: transform 0.2s;
}
.card:hover {
  transform: scale(1.02);
}
</style>